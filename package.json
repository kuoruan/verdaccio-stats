    "@adminjs/express": "^6.1.1",
    "@adminjs/sequelize": "^4.1.1",
    "@verdaccio/core": "8.0.0-next-8.15",
    "adminjs": "^7.8.16",
    "dayjs": "^1.11.13",
    "debug": "^4.4.1",
    "sequelize": "^6.37.7",
    "umzug": "^3.8.2",
    "zod": "^3.25.34"
  },
  "pnpm": {
    "peerDependencyRules": {
      "allowedVersions": {
        "@tiptap/core": "^2.1.0",
        "@tiptap/pm": "^2.1.0",
        "@types/react": "^19.0.0"
      }
    }
  }
